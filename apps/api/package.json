{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "packageManager": "pnpm@9.7.1",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:create": "npx mikro-orm database:create && pnpm db:migration:up",
    "db:sync": "npx mikro-orm schema:update --run",
    "db:fresh": "npx mikro-orm schema:fresh --seed --run --config=./src/config/mikro-orm.config.ts",
    "db:migration:check": "npx mikro-orm migration:check",
    "db:migration:up": "npx mikro-orm migration:up",
    "db:migration:down": "npx mikro-orm migration:down",
    "db:migration:create": "npx mikro-orm migration:create",
    "db:migration:list": "npx mikro-orm migration:list",
    "db:seed": "npx mikro-orm seeder:run --config=./src/config/mikro-orm.config.ts",
    "db:seed:prod": "npx mikro-orm seeder:run --config=./dist/config/mikro-orm.config.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:unit": "NODE_ENV=test jest --testPathIgnorePatterns=src/test/",
    "test:unit:watch": "NODE_ENV=test jest --testPathIgnorePatterns=src/test/ --watch",
    "test:unit:cov": "NODE_ENV=test jest --testPathIgnorePatterns=src/test/ --coverage",
    "test:integration": "NODE_ENV=test jest --testPathPattern=src/test/ --runInBand",
    "test:integration:docker": "docker-compose -f ../../docker-compose.test.yml up -d && sleep 3 && NODE_ENV=test jest --testPathPattern=src/test/ --runInBand && docker-compose -f ../../docker-compose.test.yml down"
  },
  "dependencies": {
    "@dropit/contract": "workspace:*",
    "@dropit/permissions": "workspace:*",
    "@dropit/schemas": "workspace:*",
    "@faker-js/faker": "^9.3.0",
    "@getbrevo/brevo": "^2.5.0",
    "@mikro-orm/cli": "6.4.7",
    "@mikro-orm/core": "6.4.7",
    "@mikro-orm/migrations": "6.4.7",
    "@mikro-orm/nestjs": "6.1.1",
    "@mikro-orm/postgresql": "6.4.7",
    "@mikro-orm/reflection": "6.4.7",
    "@mikro-orm/seeder": "6.4.7",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@ts-rest/nest": "^3.51.0",
    "@ts-rest/open-api": "^3.51.0",
    "better-auth": "^1.2.7",
    "better-auth-mikro-orm": "^0.3.0",
    "dotenv": "^16.5.0",
    "express": "^4.21.1",
    "nodemailer": "^7.0.3",
    "pg": "^8.15.6",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "scrypt-js": "^3.0.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^11.1.6",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.3.1",
    "@types/pg": "^8.11.14",
    "@types/supertest": "^6.0.0",
    "jest": "^29.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.4",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/mikro-orm.config.ts",
      "./dist/config/mikro-orm.config.js"
    ]
  }
}
