{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist",

    // Essential for cross-imports
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
